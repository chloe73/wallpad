<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="69.2px"
        android:layout_marginLeft="52px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/temp_time"
            android:layout_width="266px"
            android:layout_height="wrap_content"
            android:layout_marginTop="8px"
            android:src="@drawable/temp_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_weather"
            android:layout_width="79.4px"
            android:layout_height="wrap_content"
            android:src="@drawable/weather1081"
            android:layout_marginRight="65px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="108.4px"
            android:layout_height="wrap_content"
            android:src="@drawable/temperature"
            app:layout_constraintEnd_toStartOf="@+id/img_weather"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/const_top">

        <ImageView
            android:id="@+id/btn_menu"
            android:layout_width="65px"
            android:layout_height="65px"
            android:layout_marginLeft="64px"
            android:background="@android:color/transparent"
            android:contentDescription="menu"
            android:src="@drawable/hamburger_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45px"
            android:text="환기"
            android:textStyle="normal"
            android:textSize="47px"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/btn_menu"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/btn_home"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginEnd="60px"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_home" />

        <ImageView
            android:id="@+id/imageButton2"
            android:layout_width="63px"
            android:layout_height="63px"
            android:layout_marginEnd="33.7px"
            android:background="@android:color/transparent"
            android:contentDescription="help"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_home"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/manual_btn" />

        <ImageView
            android:id="@+id/img_change_filter"
            android:layout_width="166px"
            android:layout_height="59px"
            android:layout_marginEnd="34px"
            android:background="@drawable/change_filter_btn"
            android:contentDescription="change filter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageButton2"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/change_filter_btn">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="필터 교환"
            android:textColor="@color/white"
            android:textSize="30px"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/img_change_filter"
            app:layout_constraintEnd_toEndOf="@+id/img_change_filter"
            app:layout_constraintStart_toStartOf="@+id/img_change_filter"
            app:layout_constraintTop_toTopOf="@+id/img_change_filter" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_frag"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="36px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>