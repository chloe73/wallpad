<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".fragment.lighting.SmartLightingFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_in_smart_lighting_room"
        android:layout_width="0dp"
        android:layout_marginStart="60px"
        android:layout_height="236px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_lighting_room"
            android:layout_width="match_parent"
            android:layout_height="236px"
            android:orientation="horizontal"
            tools:listitem="@layout/item_lighting_room" />

    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/tv_room_name_in_smart_lighting_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60px"
        android:layout_marginTop="74px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nested_scroll_in_smart_lighting_room"
        android:text="방 이름"
        android:fontFamily="@font/apple_sd_gothic_neo_sb"
        android:textStyle="normal"
        android:textSize="64px"
        android:textColor="#ffffff"/>
    
    <ImageView
        android:layout_width="94px"
        android:layout_height="94px"
        android:layout_marginTop="66px"
        android:layout_marginEnd="63px"
        android:background="@drawable/btn_edit_room_name"
        app:layout_constraintTop_toBottomOf="@+id/nested_scroll_in_smart_lighting_room"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="38px"
        app:layout_constraintTop_toBottomOf="@+id/tv_room_name_in_smart_lighting_fragment"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>