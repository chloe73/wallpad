        app:layout_constraintTop_toBottomOf="@+id/seekBar_right_in_room"
        app:layout_constraintEnd_toStartOf="@+id/img_right_curtain_item6_in_room"/>

    <ImageView
        android:id="@+id/img_right_curtain_item8_in_room"
        android:layout_width="37.7px"
        android:layout_height="178px"
        android:layout_marginTop="11px"
        android:layout_marginRight="-1px"
        android:background="@drawable/left_curtain_item"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_right_in_room"
        app:layout_constraintEnd_toStartOf="@+id/img_right_curtain_item7_in_room"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_close_in_room"
        android:layout_width="212px"
        android:layout_height="56px"
        android:layout_marginStart="33px"
        android:layout_marginBottom="28px"
        android:background="@drawable/btn_effect_electric_curtain_open_close_stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/apple_sd_gothic_neo_m"
            android:text="닫힘"
            android:textColor="@color/white"
            android:textSize="28px"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_open_in_room"
        android:layout_width="212px"
        android:layout_height="56px"
        android:layout_marginBottom="28px"
        android:background="@drawable/btn_effect_electric_curtain_open_close_stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_pause_in_room"
        app:layout_constraintStart_toEndOf="@+id/btn_close_in_room">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/apple_sd_gothic_neo_m"
            android:text="열림"
            android:textColor="@color/white"
            android:textSize="28px"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_pause_in_room"
        android:layout_width="212px"
        android:layout_height="56px"
        android:layout_marginEnd="34px"
        android:layout_marginBottom="28px"
        android:background="@drawable/btn_effect_electric_curtain_open_close_stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/apple_sd_gothic_neo_m"
            android:text="일시정지"
            android:textColor="@color/white"
            android:textSize="28px"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

