<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="960px"
    android:layout_height="263px"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="14px"
    android:background="@drawable/img_background_lighting">

    <TextView
        android:id="@+id/tv_smart_lighting_room_in_piece_lighting_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34.2px"
        android:layout_marginStart="46.9px"
        android:text="조명 1"
        android:fontFamily="@font/apple_sd_gothic_neo_sb"
        android:textStyle="normal"
        android:textSize="52px"
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Switch
        android:id="@+id/switch_smart_lighting_room_in_piece"
        android:layout_width="143.1px"
        android:layout_height="65.6px"
        android:layout_marginBottom="43px"
        android:thumb="@drawable/switch_thumb"
        android:track="@drawable/switch_track"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/img_lighting"
        android:layout_width="108.2px"
        android:layout_height="155px"
        android:layout_marginTop="54px"
        android:layout_marginEnd="74px"
        android:background="@drawable/img_lighting_off"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_wat_lighting_room_in_piece"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/img_lighting"
        app:layout_constraintBottom_toBottomOf="@+id/img_lighting"
        android:layout_marginEnd="42.8px"
        android:text="W"
        android:fontFamily="@font/apple_sd_gothic_neo_l"
        android:textStyle="normal"
        android:textSize="44px"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_wat_lighting_room_in_piece"
        app:layout_constraintEnd_toStartOf="@+id/tv_wat_lighting_room_in_piece"
        android:text="0.000"
        android:fontFamily="@font/apple_sd_gothic_neo_l"
        android:textStyle="normal"
        android:textSize="44px"
        android:textColor="#ffffff"/>

</androidx.constraintlayout.widget.ConstraintLayout>